---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Mahad Kalam</title>
  </head>
  <body
    class="bg-base text-text pt-10 flex flex-col gap-8 mx-auto max-w-screen-md px-3"
  >
    <header class="flex">
      <a href="/" class="font-semibold">Mahad Kalam</a>
      <ul class="ml-auto flex gap-2 text-subtext0 hover:*:text-subtext1">
        <li class="*:underline *:underline-offset-[3px] *:decoration-white/30">
          <a href="/">e</a>
        </li>
      </ul>
    </header>
    <main><slot /></main>
  </body>
</html>
