---
import Header from "../components/layout/header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Mahad Kalam</title>
  </head>
  <body
    class="bg-base text-text pt-10 flex flex-col gap-8 mx-auto max-w-screen-md px-3"
  >
    <Header />
    <main><slot /></main>
  </body>
</html>
