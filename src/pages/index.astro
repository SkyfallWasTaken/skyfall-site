---
import Layout from "../layouts/layout.astro";
import Button from "../components/ui/button.astro";
import RustIcon from "../components/home/rust-icon.astro";
import TsIcon from "../components/home/ts-icon.astro";
import SvelteIcon from "../components/home/svelte-icon.astro";
import AstroIcon from "../components/home/astro-icon.astro";
import TwIcon from "../components/home/tw-icon.astro";

import { Image } from "astro:assets";
import logoImage from "../img/logo.png";

const quotes = [
  "code whisperer by day, chaos enthusiast by night",
  "freefalling through the internet",
  "the internet is a series of tubes",
  "welcome to the internet, have a look around",
  "it's time to build!",
  "bashing bits and bytes",
  `enjoy your ${new Date()
    .toLocaleDateString("en-US", {
      weekday: "long",
    })
    .toLowerCase()}!`,
  "code is poetry (well, sometimes)",
  "it's time to sail the high seas!",
  "it's better to be a pirate than to join the navy!",
  "aye aye cap'n!",
];
const randomQuote = quotes[Math.floor(Math.random() * quotes.length)];
---

<Layout title="Home">
  <div class="space-y-9">
    <div class="flex flex-col sm:flex-row items-stretch gap-4">
      <div id="hero">
        <div class="mb-2" x-data>
          <h1 class="text-3xl font-bold mb-1">Hey, I'm Mahad!ðŸ‘‹</h1>
          <p class="mb-0 font-mono">{randomQuote}</p>
        </div>
        <div class="space-y-1 mb-6">
          <small class="uppercase font-semibold text-overlay2 mb-4"
            >Technologies</small
          >
          <div
            class="flex gap-4 *:fill-current *:w-8 hover:*:fill-lavender *:transition *:cursor-pointer"
          >
            <RustIcon />
            <TsIcon />
            <SvelteIcon />
            <AstroIcon />
            <TwIcon />
          </div>
        </div>
        <div
          class="flex w-fit gap-2 items-center bg-surface0 rounded-md shadow-sm px-3 py-2 mb-6"
        >
          <svg width="16" height="16" class="fill-green">
            <circle cx="8" cy="8" r="6"></circle>
          </svg>
          <small class="font-semibold text-text">
            Listening to 3 O'Clock Things - AJR
          </small>
        </div>
        <div class="flex flex-col sm:flex-row gap-3">
          <Button variant="primary">View my blog</Button>
          <Button variant="secondary">Check out my projects</Button>
        </div>
      </div>
      <div class="hidden sm:block sm:w-1/3 h-full ml-auto">
        <div class="relative w-full h-full">
          <Image
            src={logoImage}
            loading="eager"
            alt="Skyfall's logo"
            class="h-full rounded-md shadow-sm object-cover"
          />
        </div>
      </div>
    </div>

    <div class="flex flex-col gap-4">
      <h1 class="font-semibold text-lg">Blog</h1>
      <ul class="space-y-2 leading-tight flex flex-col gap-2 sm:gap-0">
        <li class="flex flex-col sm:flex-row gap-3">
          <a
            href="/"
            class="underline font-medium text-subtext0 hover:text-mauve transition"
          >
            How I built my blog with Astro and Tailwind CSS
          </a>
          <p class="text-overlay0">2 days ago</p>
        </li>
      </ul>
    </div>
  </div>
</Layout>
